<header class="password-page__header" role="banner"  data-section-id="{{ section.id }}" data-section-type="password-header">
  <div class="password-page__header__inner">
    <div class="password-page__logo">
      <h1 itemscope itemtype="http://schema.org/Organization">
        {%- if section.settings.logo != blank -%}
          {%- liquid 
            if section.settings.logo contains '.jpg' 
              assign image = section.settings.logo | img_url: '40x', format: 'pjpg'
            else
              assign image = section.settings.logo | img_url: '40x'
            endif  
          -%}
          <img
            class="small--hide"
            src="{{ image }}"
            alt="{{ section.settings.logo.alt | default: shop.name }}"
            itemprop="logo">
          <img
            class="medium-up--hide"
            src="{{ image }}"
            alt="{{ section.settings.logo.alt | default: shop.name }}">
        {%- else -%}
          <span>{{ shop.name }}</span>
        {%- endif -%}
      </h1>
    </div>
  </div>
</header>

{% schema %}
  {
    "name": "Header",
    "class": "password-header-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "desktop_logo_height",
        "label": "Desktop logo height",
        "default": 100,
        "min": 20,
        "max": 120,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "mobile_logo_height",
        "label": "Mobile logo height",
        "default": 60,
        "min": 20,
        "max": 120,
        "unit": "px"
      }
    ]
  }
{% endschema %}
