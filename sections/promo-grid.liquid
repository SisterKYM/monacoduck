{%- liquid
  assign hasVideo = 'noVideo'
  for block in section.blocks
    if block.settings.video_url != ''
      assign hasVideo = 'hasVideo'
    endif
  endfor
-%}

<div
  class="PromotionGrid {{ hasVideo }}"
  id="PromotionGrid-{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="promo-grid">
  {%- unless section.settings.full_width -%}
    <div class="page-width{% if section.settings.full_width_mobile %} mobile-full{% endif %}">
  {%- endunless -%}

  {%- render 'promo-grid', section: section -%}

  {%- if section.blocks.size == 0 -%}
    <div class="page-width text-center">
      <div class="rte">
        <p>
          {{ 'home_page.onboarding.no_content' | t }}
        </p>
      </div>
    </div>
  {%- endif -%}

  {%- unless section.settings.full_width -%}
    </div>
  {%- endunless -%}
</div>

